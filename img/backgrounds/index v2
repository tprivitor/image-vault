<h1>My Image Vault</h1>
<a class="back" href="/image-vault/">‚Üê Back to Image Vault</a>

<div class="msg" id="status">Loading icons‚Ä¶</div>
<main class="grid" id="grid"></main>

<script>
  // GitHub repo + folder settings
  const owner = "tprivitor";
  const repo = "image-vault";
  const folderPath = "img/backgrounds"; // üëà change this if you copy to another folder

  const apiUrl = `https://api.github.com/repos/${owner}/${repo}/contents/${folderPath}`;
  const grid = document.getElementById("grid");
  const statusEl = document.getElementById("status");

  const imageExts = [".png", ".jpg", ".jpeg", ".webp", ".gif", ".ico"];

  fetch(apiUrl)
    .then(res => {
      if (!res.ok) throw new Error("GitHub API error " + res.status);
      return res.json();
    })
    .then(items => {
      const files = items
        .filter(item =>
          item.type === "file" &&
          item.name !== "index.html" &&
          !item.name.startsWith(".") &&
          imageExts.some(ext => item.name.toLowerCase().endsWith(ext))
        )
        .sort((a, b) => a.name.localeCompare(b.name));

      if (files.length === 0) {
        statusEl.textContent = "No image files found in this folder.";
        return;
      }

      statusEl.textContent = ""; // clear "Loading..."

      files.forEach(item => {
        const a = document.createElement("a");
        a.className = "card";
        a.href = item.name;          // relative link
        a.target = "_blank";

        const img = document.createElement("img");
        img.src = item.name;         // relative image src
        img.alt = item.name;

        const span = document.createElement("span");
        span.textContent = item.name;

        a.appendChild(img);
        a.appendChild(span);
        grid.appendChild(a);
      });
    })
    .catch(err => {
      console.error(err);
      statusEl.textContent = "Failed to load icons from GitHub API.";
    });
</script>

</body>
